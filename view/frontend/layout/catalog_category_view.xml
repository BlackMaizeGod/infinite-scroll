<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="infinite-scroll.category.products.list" class="Magento\Catalog\Block\Product\ListProduct"
                   template="BMG_InfiniteScroll::product/list.phtml" after="category.products">
                <action method="setIsAjax">
                    <argument name="isAjax" xsi:type="boolean">false</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
